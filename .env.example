# Database
DATABASE_URL=postgresql://jobmatcher:jobmatcher_pass@localhost:5432/jobmatcher
REDIS_URL=redis://localhost:6379/0

# AI Service
ANTHROPIC_API_KEY=your_api_key_here

# RapidAPI - JSearch (for job fetching from LinkedIn and other sources)
# Sign up at: https://rapidapi.com/letscrape-6bRBa3QguO5/api/jsearch
# Subscribe to the free plan and get your API key
RAPIDAPI_KEY=your_rapidapi_key_here
RAPIDAPI_HOST=jsearch.p.rapidapi.com

# Email Configuration
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your_email@gmail.com
SMTP_PASS=your_app_password
NOTIFICATION_EMAIL=your_email@gmail.com

# Job Search Filters (Default values for creating filters)
# Keywords: Use actual LinkedIn job titles, comma-separated
# Examples: Software Engineer, Back End Developer, Data Analyst, Full Stack Engineer
SEARCH_KEYWORDS=Software Engineer,Backend Developer,Data Engineer
# Location: City, State, Country (e.g., "Israel", "Tel Aviv, Israel")
SEARCH_LOCATION=US
# Job Type: leave empty to not filter by employment type
SEARCH_JOB_TYPE=
# Experience Level: leave empty to not filter by experience
SEARCH_EXPERIENCE_LEVEL=
# Remote Only: set to false to include both remote and onsite jobs
SEARCH_REMOTE_ONLY=false
# Date Posted: all, today, 3days, week, month
SEARCH_DATE_POSTED=month
# Max Pages: Number of result pages to fetch (1 page = ~10 jobs)
SEARCH_MAX_PAGES=2

# Job Title Pre-Filtering (to reduce AI API usage)
# Jobs with titles containing these keywords are auto-rejected (case-insensitive, comma-separated)
# Examples: senior, sr., lead, manager, architect, staff, principal, director
JOB_TITLE_EXCLUDE_KEYWORDS=senior,sr.,experienced,architect,staff,team lead,manager,lead,principal,director,vp,head of,chief
# Jobs MUST contain one of these keywords to be analyzed (leave empty to analyze all non-excluded)
JOB_TITLE_INCLUDE_KEYWORDS=
# Jobs containing these keywords will always trigger notification regardless of match score (case-insensitive, comma-separated)
# Examples: junior, entry-level, intern, entry level, graduate
JOB_TITLE_MUST_NOTIFY_KEYWORDS=junior,entry-level,entry level,intern,graduate
# Enable/disable pre-filtering (set to false to always use AI for analysis)
JOB_PREFILTER_ENABLED=true

# Scheduler Configuration
FETCH_INTERVAL_MINUTES=480
TIMEZONE=UTC

# Application
PORT=8000
ENVIRONMENT=development
